@model Shop.Models.UserRegis
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- STYLE CSS -->
    <link href="~/Content/css/style_regisform.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <div class="inner">
            <div class="image-holder">

                <img src="~/Content/img/registration-form-4.jpg" />
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <h3>Sign Up</h3>
                <div class="form-holder active">
                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control", @placeholder = "Name", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
                
                <div class="form-holder">
                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "E-mail", @autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-holder">
                    @*<input type="password" placeholder="Password" class="form-control" style="font-size: 15px;">*@
                    @Html.PasswordFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="checkbox">
                    <label>
                        <input type="checkbox" checked> I agree all statement in <a href="#">Terms & Conditions</a>
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="form-login">
                    <button>Sign up</button>
                    <p>Already Have account? <a href="@Url.Action("Index", "Login")">Login</a></p>

                </div>

            }

        </div>
    </div>

    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/main_regis.js"></script>
</body>

