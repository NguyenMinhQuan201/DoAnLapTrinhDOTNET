@model IEnumerable<Models.Framework.SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/css/Trang-chu.css">
</head>
<!-- THIS THING -->
<div class="layout-2">
    <div class="tieu-de">
        <a href="./Trang-chu.html"><h1 class="h1-dau">Spring Summer Collection 2021</h1> </a>
    </div>
</div>

<div class="HOT-IN">
    <div class="danh-gia">
        <h3 class="h3-dau">HOT IN DAY !! </h3>
    </div>
</div>
<div style="height: 1000px; background-color: #ffcccc">
    <div class="main">
        <div class="view">
            <ul>
                @foreach (var item in Model)
                {
                    <li style=" border:1px solid;border-radius:20px ">
                        <div class="scarves">
                            <a type="submit" class="hover"
                               href="@Url.Action("Details", "Events", new { id = item.IDSanPham })">
                                <img style="height:300px" src="~/Content/img/@Html.DisplayFor(modelItem => item.Images)">
                                <h3 class="h3-main"> @Html.DisplayFor(modelItem => item.Ten)</h3>
                            </a>
                            <br />
                            <br />

                            <img style="float: left; margin-left: 5px" src="~/Content/img/new.jpg" width="50px">
                            <b><p style="float: left; margin-left: 5px ">€ @Html.DisplayFor(modelItem => item.Gia)</p></b>


                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
